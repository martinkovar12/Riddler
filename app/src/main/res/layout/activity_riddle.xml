<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/activity_riddle"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="martinkovar12.riddler.Riddle">

	<ImageView
			android:layout_width="200dp"
			android:layout_height="200dp"
			app:srcCompat="@drawable/ic_launcher"
			android:id="@+id/imageView"
			app:layout_constraintLeft_toLeftOf="@+id/activity_riddle"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"
			app:layout_constraintTop_toTopOf="@+id/activity_riddle"
			android:layout_marginTop="64dp"
			app:layout_constraintRight_toRightOf="@+id/activity_riddle"
			android:layout_marginRight="16dp"
			android:layout_marginEnd="16dp" />

	<TextView
			android:text="Riddle"
			android:gravity="center"
			android:layout_width="150dp"
			android:layout_height="40dp"
			android:id="@+id/textView"
			app:layout_constraintLeft_toLeftOf="@+id/activity_riddle"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"
			app:layout_constraintTop_toBottomOf="@+id/imageView"
			android:layout_marginTop="64dp"
			app:layout_constraintRight_toRightOf="@+id/activity_riddle"
			android:layout_marginRight="16dp"
			android:layout_marginEnd="16dp" />

	<martinkovar12.riddler.ui.CountDownTimerTextView
			android:gravity="center"
			android:layout_width="150dp"
			android:layout_height="40dp"
			android:id="@+id/textView2"
			app:layout_constraintLeft_toLeftOf="@+id/activity_riddle"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"
			app:layout_constraintTop_toBottomOf="@+id/textView"
			android:layout_marginTop="8dp"
			app:layout_constraintRight_toRightOf="@+id/activity_riddle"
			android:layout_marginRight="16dp"
			android:layout_marginEnd="16dp"
			app:layout_constraintBottom_toBottomOf="@+id/activity_riddle"
			android:layout_marginBottom="16dp" />
</android.support.constraint.ConstraintLayout>
