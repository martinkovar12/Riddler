<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		package="martinkovar12.riddler">
	<application
			android:allowBackup="true"
			android:icon="@drawable/ic_launcher"
			android:label="@string/app_name"
			android:theme="@style/AppTheme">
		<activity
				android:name=".activity.Main"
				android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
				android:name=".activity.NewGame"
				android:label="@string/title_activity_new_game" />
		<activity
				android:name=".activity.LoadGame"
				android:label="@string/title_activity_load_game" />
		<activity
				android:name=".activity.Game"
				android:label="@string/title_activity_game" />
		<activity android:name=".activity.Riddle" />
	</application>
</manifest>